{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/OwlCore.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**",
            "**/wwwroot/**"
          ],
          "src": "../"
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/toc.yml",
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml"
        ]
      },
      {
        "files": [
          "index.md",
          "toc.yml",
          "**.md"
        ]
      }
    ],
    "dest": "wwwroot",
    "template": [
      "default"
    ],
    "globalMetadata": {
      "_appTitle": "OwlCore",
      "_appFooter": "Â© 2022 Arlo Godfrey",
      "_enableSearch": true,
      "_appFaviconPath": "assets/favicon.ico"
    },
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "markdownEngineName": "markdig",
    "noLangKeyword": false
  }
}